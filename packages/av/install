# check for supported platform (whitelisted ubuntu versions)
# if [ $OS_DISTRIBUTION == "trusty" ]; then
# else 
# 	add-apt-repository ppa:jonathonf/ffmpeg-3
# fi

apt-get update -qq
apt-get install -y libavfilter-dev libavformat-dev
