#!/bin/bash
set -x
set -e

OS_DISTRIBUTION=$(lsb_release -cs)

apt-get update -qq

# this sysdep is available by default in bionic
if [[ ${OS_DISTRIBUTION} = "xenial" ]]; then
  apt-get install -y software-properties-common python-software-properties
  # PPA has recent ImageMagick versions for Ubuntu Xenial
  add-apt-repository -y ppa:cran/imagemagick
  apt-get update -qq
fi

apt-get install -y libmagick++-dev
